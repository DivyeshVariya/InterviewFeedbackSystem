package com.emailService.swagger;

import java.util.List;

import org.springframework.stereotype.Component;

import io.swagger.v3.oas.models.parameters.Parameter;
import lombok.val;
import springfox.documentation.builders.ParameterBuilder;
import springfox.documentation.schema.Collections;
import springfox.documentation.schema.ModelRef;

@Component
public class SwaggerConfig {

	public List<Parameter> globalParameterList() {
	    val authTokenHeader =
	        new ParameterBuilder()
	            .name("My_SECERT") // name of the header
	            .modelRef(new ModelRef("string")) // data-type of the header
	            .required(true) // required/optional
	            .parameterType("header") // for query-param, this value can be 'query'
	            .description("Custom Auth Token")
	            .build();

	    return Collections.singletonList(authTokenHeader);
	}
}
