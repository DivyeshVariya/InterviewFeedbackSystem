server.port=8888
spring.application.name=API-GATEWAY
eureka.instance.client.serverUrl.defaultZone=http://localhost:8761/eureka/

#for user service
spring.cloud.gateway.routes[1].id=USER-SERVICE
spring.cloud.gateway.routes[1].uri=lb://USER-SERVICE
spring.cloud.gateway.routes[1].predicates[0]=Path=/userAuth/**,/userManager/**

#for email service
spring.cloud.gateway.routes[0].id=EMAIL-SERVICE
spring.cloud.gateway.routes[0].uri=lb://EMAIL-SERVICE
spring.cloud.gateway.routes[0].predicates[0]=Path=/emailManager/**

#for feedback service
spring.cloud.gateway.routes[2].id=FEEDBACK-SERVICE
spring.cloud.gateway.routes[2].uri=lb://FEEDBACK-SERVICE
spring.cloud.gateway.routes[2].predicates[0]=Path=/feedbackManager/**